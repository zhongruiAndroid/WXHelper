<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:background="@color/gray_99"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/triangle_top"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        />
    <com.github.fastshape.MyTextView
        android:id="@+id/tvSortTime"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="修改时间↑"
        android:textColor="@color/gray_33"
        android:drawablePadding="15dp"
        android:textSize="12sp"
        app:topRightRadius="5dp"
        app:topLeftRadius="5dp"
        app:solidColor="@color/white"
        android:gravity="center"
        />
    <View
        android:background="@color/divider_color"
        android:layout_width="100dp"
        android:layout_height="1px"/>
    <TextView
        android:id="@+id/tvSortName"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="文件名称↑"
        android:textColor="@color/gray_33"
        android:background="@color/white"
        android:textSize="12sp"
        android:gravity="center"/>
    <View
        android:background="@color/divider_color"
        android:layout_width="100dp"
        android:layout_height="1px"/>
    <com.github.fastshape.MyTextView
        android:id="@+id/tvSortSize"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="文件大小↑"
        android:textColor="@color/gray_33"
        android:drawablePadding="15dp"
        android:textSize="12sp"
        app:bottomRightRadius="5dp"
        app:bottomLeftRadius="5dp"
        app:solidColor="@color/white"
        android:gravity="center"
        />
</LinearLayout>